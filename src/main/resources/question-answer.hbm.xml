<?xml version="1.0" encoding="UTF-8"?>

<hibernate-mapping>
	<class name="com.advanz.pojo.Question" table="question">
		<id name="queId">
			<generator class="increment" />
		</id>
		<property name="queName"></property>
		<property name="parentQue"></property>
		<property name="typeOfAnswer"></property>
		
		<list name="answers" cascade="all">
			 <key column="qid"></key>
			<index column="type"></index>
			<one-to-many class="com.advanz.pojo.Answer"></one-to-many>
		</list>

	</class>
	<class name="com.advanz.pojo.Answer" table="answer">
		<id name="ansId">
			<generator class="increment" />
		</id>
		<property name="answerName"></property>
	</class>

</hibernate-mapping>